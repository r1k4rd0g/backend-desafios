<div class="divPrincipal">
    <h1 class="h1Home">Lista de productos cargados hasta el momento</h1>
    <h2>Bienvenido,<br>
                    Nombre: {{user.first_name}}<br>
                    Apellido: {{user.last_name}}<br>
                    Rol:{{user.role}}</h2>
    <div class="botonBox">
        <form class="form" action="/api/sessions/current" method="post">
            <button id="perfil" type="submit">Perfil</button>
        </form>
        <form class="form" action="/api/product" method="post">
            <button id="workWProduct">Work with product</button>
        </form>
        <form class="form" action="/api/users/logout" method="post">
            <button type="submit">Cerrar sesión</button>
        </form>
    </div>
    <div class = "containerList" id="containerList">
            <ul>
                {{#each products}}
                    <li>
                        <strong>Titulo: </strong>{{this.Title}}<br>
                        <strong>Price: </strong>{{this.Price}}<br>
                        <strong>Description: </strong>{{this.Description}}<br>
                        <strong>Category: </strong>{{this.Category}}<br>
                        {{#if this.Thumbnail}}
                        {{#each this.Thumbnail}}
                        <div class="imgContainer">
                            <img class="imgProduct" src="{{this}}" alt="{{this.Title}}">
                            </div>
                        {{/each}}
                    {{/if}}
                    <form class="form" action="/api/cart/add" method="post">
                    <input type="hidden" name="productId" value="{{this._id}}">
                    <input type="number" name="quantity" value="1" min="1">
                    <button type="submit">Agregar al carrito</button>
                    </li>
                {{/each}}
            </ul>
    </div>
    <!--acá se muestre la lista que contiene todos los productos hasta el momento. sería el json.-->
</div>
    <script src="productlist.js" charset="utf-8"></script>